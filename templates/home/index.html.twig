{% extends 'base.html.twig' %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container mt-5">
    <div class="row">
            <div class="row jumbotron">
                <h3 class="display-5">Bienvenue !</h3>
                <p class="col-sm-12 lead">Gardez un oeil sur vos d√©penses, quel que soit leurs types.</p>
                <hr class="my-4">
                
                    {% if app.user is null or app.user is not defined %}    
                        <div class="col-sm-12 lead bg-info" style="padding: 0">
                            <a class="btn btn-primary btn-lg" href="{{ path('app_login') }}" role="button" style="width: 100%">Connexion</a>                
                        </div>
                    {% elseif app.user is not null and app.user is defined %}
                        
                        <div class="col-sm-6 col-12 bg-default" style="padding: 0.2em">
                            <a class="btn btn-success" href="{{ path('charges_list') }}" role="button" style="width: 100%">Charges fixes</a>                                                                                                           
                        </div>
                                                                        
                        <div class="col-sm-6 col-12 bg-default" style="padding: 0.2em">
                            <a class="btn btn-info" href="{{ path('alimentation_list') }}" role="button" style="width: 100%">Alimentation</a>     
                        </div>
                        
                    {% endif %}
                
            </div>
    </div>
</div>

{% endblock %}
