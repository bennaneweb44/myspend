{% extends 'base.html.twig' %}

{% block title %}Charges{% endblock %}

{% block body %}

<div class="mt-4 mb-4" style="padding: 5px 0; color: whitesmoke !important">
    <h3 class="text-center">
        <i class="fa fa-sort-amount-asc" style="font-size: 0.8em"></i> Charges
    </h3>
</div>

<div id="appCharges"></div>

{% endblock %}

{% block css %}
<style>

    .modal-body {
        background-color: #18bc9c !important;
    } 

    .card-body {
        margin-top: -15px;   
        margin-left: -15px;
    }

    h5.card-title {
        margin-bottom: 10px;
    }

    h5.card-title > b{
        font-size: 20px !important;
    }

    /* Portable */
    @media all and (max-device-width: 480px)
    {
        #btnSaverCharge {
            height: 65px !important;
        }
        /* Modal plus large */
        .modal-content {
            width: 850px;
            margin-top: 5em !important;
            margin-left: -180px !important;
        }
    }

    /* Tablette */
    @media all and (min-device-width: 480px) and (max-device-width: 768px)
    {
        /* Modal plus large */
        .modal-content {
            width: 700px;
            margin-left: -100px !important;
        }
        .container {
            max-width: 850px !important;
        }
    }

    /* Ordinateur */
    @media all and (min-device-width: 769px) and (max-device-width: 1439px)
    {
        /* Modal plus large */
        .modal-content {
            width: 700px;
            margin-left: -100px !important;
        }
    }

    /* Ecran large */
    @media all and (min-device-width: 1440px) 
    {
        /* Modal plus large */
        .modal-content {
            width: 700px;
            margin-left: -100px !important;
        }
    }      
    
</style>
{% endblock %}
