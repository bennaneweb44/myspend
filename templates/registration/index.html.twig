{# templates/registration/index.html.twig #} 
{% extends 'base.html.twig' %} 
{% block body %}
    <div class="container">
        <div class="row">
            <div class="card bg-light mb-3 mt-5" style="width: 100%">
                <div class="card-body">
                    <div class="card-header mb-3"><i class="fa fa-user-plus"></i> Inscription</div>
                    {{ form_start(form) }}
                    <div class="form_group">
                        <div class="col-md-12 mb-3">
                            {{ form_row(form.name, {'attr': {'class': 'form-control'}, 'label' : 'Nom'}) }}
                        </div>
                    </div>
                    <div class="form_group">
                        <div class="col-md-12 mb-3">
                            {{ form_row(form.email, {'attr': {'class': 'form-control'}, 'label' : 'E-mail'}) }}
                        </div>
                    </div>
                    <div class="form_group">
                        <div class="col-md-12 mb-3">
                            {{ form_row(form.password.first, {'attr': {'class': 'form-control'}, 'label' : 'Mot de passe'}) }}
                        </div>
                    </div>
                    <div class="form_group">
                        <div class="col-md-12 mb-3">
                            {{ form_row(form.password.second, {'attr': {'class': 'form-control'}, 'label' : 'Confirmation'}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12" style="margin-top:5px;">
                            <button type="submit" class="btn btn-primary" style="width: 100%">
                                <i class="fa fa-check"></i> S'inscrire
                            </button>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>    
{% endblock %}