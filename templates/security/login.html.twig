{# templates/security/login.html.twig #} 
{% extends 'base.html.twig' %} 
{% block title %}Connexion{% endblock %} 

{% block body %}    
    
    <div class="col-xs-12 offset-md-2 col-md-8">
        <div class="card bg-light mb-3 mt-5">
            <div class="card-body">
                <form class="form-horizontal" role="form" method="post">
                    {% if error %}
                        <div class="alert alert-danger">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %} 
                    
                    {% if app.user %}
                        <div class="mb-3">
                            Connect√© en tant que {{ app.user.username }},
                            <a href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    {% endif %}

                    <div class="card-header mb-3"><i class="fa fa-key"></i> Authentification</div>

                    <div class="form-group">
                        <label for="email" class="col-12 control-label"
                            >E-mail</label
                        >
                        <div class="col-md-12">
                            <input
                            id="inputEmail"
                            type="email"
                            class="form-control"
                            name="email"
                            value="{{ last_username }}"
                            required
                            autofocus
                            />
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="password" class="col-12 control-label"
                            >Mot de passe</label
                        >
                        <div class="col-md-12">
                            <input
                            id="inputPassword"
                            type="password"
                            class="form-control"
                            name="password"
                            required
                            />
                        </div>
                    </div>

                    <input
                        type="hidden"
                        name="_csrf_token"
                        value="{{ csrf_token('authenticate') }}"
                        />
                    <div class="form-group">
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-primary" style="width: 100%">
                                <i class="fa fa-btn fa-sign-in"></i> Se connecter
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>    
    </div>

{% endblock %}